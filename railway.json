{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./bin/railway-build.sh"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "startCommand": "bundle exec puma -C config/puma.rb",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}