<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> impidieron que este libro se guardara:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, in: 1..Time.current.year %>
  </div>

  <div>
    <%= form.label :historic_context %>
    <%= form.text_area :historic_context %>
  </div>
  <div>
    <%= form.label :author_details %>
    <%= form.text_area :author_details %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
