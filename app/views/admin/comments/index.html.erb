<h1>Admin::Comments#index</h1>

<table>
  <thead>
    <tr>
      <th>Libro</th>
      <th>Contenido</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.book.title %></td>
        <td><%= comment.content %></td>
        <td><%= comment.status %></td>
        <td>
          <%= form_with(model: [:admin, comment], local: true) do |form| %>
            <%= form.select :status, Comment.statuses.keys %>
            <%= form.submit "Actualizar" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
